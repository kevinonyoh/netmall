<%- include("header") %> 

<% if(data.length > 0){ %>
  <div id="productGrid"> 
    <h3 class="product-header overflow-visible">Delete Product</h3>
      <div class="container">
        <div class="row">
         <% data.forEach(val => { %> 
          
          <div class="product-item col-md-3">
            <img src="<%= val.url %>" alt="<%= val.name %>" srcset="">
             <h3 class="overflow-visible"><%= val.name %></h3>
              <p><%= val.price %></p>
            
      <!-- Button trigger modal -->
  <button type="button" class="btn sign-up" data-toggle="modal" data-target="#<%= val.cloudinary_id %>">
    delete
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="<%= val.cloudinary_id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this item from stock
        </div>
        <div class="modal-footer">
          <button type="button" class="btn sign-up" data-dismiss="modal">Close</button>
          <form action="/admin-delete" method="post">
            <button class="btn sign-up" type="submit" value="<%= val.cloudinary_id %>" name="deleteItem" style="background-color: red; color:white;">delete</button>
             
        </form>
        </div>
      </div>
    </div>
  </div>
  
        </div>
          <% }) %> 
        </div>
      </div>
  </div>
 <% }else{ %>
  <div class="card">
    <div class="card-body product-header" style="margin-bottom: 250px;">
      <h4>No product found. Do you wish to upload a product</h4>
      <a href="/admin-upload"><button class="btn sign-up">Upload product</button></a>
    </div>
  </div>
  <% } %> 

        
        

<%- include("footer") %>